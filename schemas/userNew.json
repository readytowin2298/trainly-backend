{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "email": "jdoe@somecompany.net",
            "password": "aRealGoodPw",
            "name": "John Doe",
            "department": "HR",
            "position": "Secretary",
            "location": "HQ",
            "isAdmin": "false"
        }
    ],
    "required": [
        "email",
        "password",
        "name",
        "department",
        "position",
        "location",
        "isAdmin"
    ],
    "properties": {
        "email": {
            "$id": "#/properties/email",
            "default": "",
            "description": "Employee Email",
            "examples": [
                "jdoe@somecompany.net"
            ],
            "title": "The email schema",
            "type": "string"
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "The password schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "aRealGoodPw"
            ]
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The name schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "John Doe"
            ]
        },
        "department": {
            "$id": "#/properties/department",
            "default": "",
            "description": "The department code for this individual's department",
            "examples": [
                "HR"
            ],
            "title": "The department schema",
            "type": "string"
        },
        "position": {
            "$id": "#/properties/position",
            "type": "string",
            "title": "The position schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Secretary"
            ]
        },
        "location": {
            "$id": "#/properties/location",
            "type": "string",
            "title": "The location schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "HQ"
            ]
        },
        "isAdmin": {
            "$id": "#/properties/isAdmin",
            "type": "boolean",
            "title": "The trainer schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "false"
            ]
        }
    },
    "additionalProperties": true
}