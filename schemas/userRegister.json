{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "examples": [
      {
          "email": "jdoe@somecompany.net",
          "password": "aRealGoodPw",
          "name": "John Doe",
          "department": "HR",
          "position": "Secretary",
          "location": "HQ",
          "isAdmin": "false"
      }
  ],
  "required": [
      "email",
      "password",
      "name",
      "department",
      "position",
      "location",
      "isAdmin"
  ],
  "properties": {
      "email": {
          "$id": "#/properties/email",
          "type": "string",
          "title": "The email schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "jdoe@somecompany.net"
          ]
      },
      "password": {
          "$id": "#/properties/password",
          "type": "string",
          "title": "The password schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "aRealGoodPw"
          ]
      },
      "name": {
          "$id": "#/properties/name",
          "type": "string",
          "title": "The name schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "John Doe"
          ]
      },
      "department": {
          "$id": "#/properties/department",
          "type": "string",
          "title": "The department schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "HR"
          ]
      },
      "position": {
          "$id": "#/properties/position",
          "type": "string",
          "title": "The position schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "Secretary"
          ]
      },
      "location": {
          "$id": "#/properties/location",
          "type": "string",
          "title": "The location schema",
          "description": "An explanation about the purpose of this instance.",
          "default": "",
          "examples": [
              "HQ"
          ]
      },
      "isAdmin": {
          "$id": "#/properties/trainer",
          "default": "",
          "description": "An explanation about the purpose of this instance.",
          "examples": [
              "false"
          ],
          "title": "The trainer schema",
          "type": "boolean"
      }
  },
  "additionalProperties": true
}